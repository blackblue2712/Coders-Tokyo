extends ../layouts/common
block content
	.container
		h1
			span.mr-3 User List
			a.btn.btn-primary(href="/users/create") New
		.d-flex.align-items-center
			form.d-flex.ml-auto(action="/users/search")
				input.form-control(type="text" name="q" id="query-name")
				button.btn.btn-primary.ml-2 Submit
		table.table
			tr
				th Avatar
				th Name
				th Phone
				th Actions
			each user in users
				tr
					td
						img(src= user.avatar, width="32")
					td= user.name 
					td= user.phone
					td
						a.btn.btn-link(href="/users/" + user.id) view