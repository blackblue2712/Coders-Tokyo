extends ../layouts/common
block content
	.container.mt-5
		if errors
			each error in errors
				.alert.alert-danger= error
		form(action="/api/product/" method="POST", enctype="multipart/form-data")
			.form-group
				label(for="name") User name
				input#name.form-control(type="text" name="name" value=values ? values.name:'')
			.form-group
				label(for="phone") Phone
				input#phone.form-control(type="text" name="phone" value=values ? values.phone:'')
			.form-group
				p Avatar
				input#phone(type="file" name="avatar")

			button.btn.btn-primary Submit